body {
  padding: 0 5px;
  font-family: Fonts.body
  font-size: 13px;
}

h1 {
  font-size: 25px;
  margin: 0.8em 0 0.5em;
  padding-top: 4px;
  border-top: 1px dotted Colors.h1-border-fg;
}

h2 {
  padding: 0;
  padding-bottom: 3px;
  border-bottom: 1px Colors.h2-border-fg solid;
  font-size: 1.4em;
  margin: 1.8em 0 0.5em;
}

#base {
  display: none;
}

#fuzzySearch {
  box-shadow: rgba(0, 0, 0, 0.5) 0px 10px 30px 10px;
  border-radius: 10px;

  position: fixed;
  z-index: 8000;

  left: 0;
  right: 0;
  top: 25px;

  width: 80%;
  height: 45px;

  margin: 0 auto;

  display: none;

  background-color: Colors.fuzzySearch-bg;
  padding-top: 25px;
  padding-bottom: 25px;

  input {
    margin-left: 10%;
    border-radius: 5px;
    width: 80%;
    border: 2px solid Colors.link-fg;
    font-size: 20px;
    padding: 5px;
  }

  ol {
    list-style-type: none;
    margin: 10px 0 0 0;
    padding: 0;

    li {
      padding: 3px;

      &.stripe {
        background: Colors.fuzzySearch-stripe-bg
      }

      &.selected {
        background: Colors.link-fg;

        a {
          color: Colors.fuzzySearch-link-fg;

          &:visited {
            color: Colors.fuzzySearch-link-fg;
          }

          &:hover {
            color: Colors.link-fg;
          }

          span {
            color: Colors.link-fg;
          }
        }
      }

      a {
        color: Colors.link-fg;
        font-size: 18px;
        text-decoration: none;

        &:visited {
          color: Colors.link-fg;
        }

        &:hover {
          background: Colors.link-hover-bg;
        }

        span {
          background-color: Colors.fuzzySearch-highlight-bg;
        }
      }

      small {
        font-size: 14px;
        padding-left: 10px;
        color: Colors.fuzzySearch-small-fg;
      }
    }
  }
}

#help {
  box-shadow: rgba(0, 0, 0, 0.5) 0px 10px 30px 10px;
  border-radius: 10px;

  position: fixed;
  z-index: 8000;

  left: 0;
  right: 0;
  top: 50%;

  width: 500px;
  height: 460px;

  margin: 0 auto;
  margin-top: -265px;

  display: none;

  padding: 25px;

  background-color: Colors.help-bg;

  ul {
    list-style-type: none;

    margin: 0;
    padding: 0;

    li {
      height: 35px;

      span {
        box-shadow: rgba(0, 0, 0, 0.5) 1px 1px 2px;
        border-radius: 3px;

        display: block;
        float: left;

        width: 50px;

        padding: 5px;
        margin-right: 20px;

        background: Colors.help-key-bg;
        text-align: center;
      }

      font-weight: bold;
    }
  }
}

#content {
  a:link, a:visited {
    text-decoration: none;
    color: Colors.link-fg;
  }

  a:hover {
    background: Colors.link-hover-bg;
  }

  #filecontents {
    img {
      border: 0;
    }

    li {
      line-height: 25px;
    }

    table {
      padding: 0;
      border-collapse: collapse;
      border-spacing: 0;

      tr {
        border-top: 1px solid #CCC;
        background-color: white;
        margin: 0;
        padding: 0;

        td {
          border: 1px solid #CCC;
          text-align: left;
          margin: 0;
          padding: 6px 13px;
        }
      }
    }
  }
}
